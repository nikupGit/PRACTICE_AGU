<Window x:Class="TaroCards.View.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaroCards"
        mc:Ignorable="d"
        Title="TaroCards"
        Height="450"
        Width="800"
        MinHeight="450"
        MinWidth="800"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Left"
                        Margin="5"
                        VerticalAlignment="Center">
                <Button Content="Сгенерировать"
                        Command="{Binding GenerateCommand}"
                        Margin="5"
                        Background="White" />
                <Button Content="Перемешать"
                        Command="{Binding ShuffleCommand}"
                        Margin="5"
                        Background="White" />
                <Button Content="Сортировать по алфавиту"
                        Command="{Binding SortCommand}"
                        Margin="5"
                        Background="White" />
                <Button Content="Восстановить порядок"
                        Command="{Binding RestoreCommand}"
                        Margin="5"
                        Background="White" />
            </StackPanel>
            <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                     Grid.Row="1"
                     VerticalAlignment="Top"
                     HorizontalAlignment="Left"
                     Width="250"
                     Height="25"
                     Margin="5" 
                     FontSize="18"/>
        </Grid>

        <ListBox Grid.Column="1"
                 ItemsSource="{Binding CardList}"
                 Margin="5">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Key}"
                                   Width="30"
                                   FontWeight="Bold" />
                        <TextBlock Text="{Binding Name}"
                                   Margin="10 0 0 0" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>